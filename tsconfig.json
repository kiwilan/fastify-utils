{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noEmit": true,
    "paths": {
      "@": ["./"],
      "@/*": ["./*"]
    }
  },
  "include": ["src", "index.d.ts"],
  "exclude": ["**/dist", "**/node_modules"]
}
